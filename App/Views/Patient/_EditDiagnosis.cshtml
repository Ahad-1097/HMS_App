
@model App.Models.ViewModel.PatientViewModel


<form  id="AddDiagnosisForm" >
    <div class="row">
        <div class="col-sm-3 mb-2">
            <h4>Diagnosis</h4>
        </div>
        <div class="col-md-4 col-12 col-sm-4 mb-2">
            <div class="form-group">
                <input class="form-control" asp-for="PatientModel.Daignosis" placeholder="Enter message">
                <span asp-validation-for="PatientModel.Daignosis" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 mb-2">
            <h4>SIDE</h4>
        </div>
        <div class="col-md-4 col-12 col-sm-4 mb-2">
            <div class="form-group">
                <select asp-for="PatientModel.Side" name="PatientModel.Side" class="form-control">
                    <option value="" selected>Select Side</option>
                    <option>Left</option>
                    <option>Right</option>
                    <option>Bilateral</option>
                </select>
                <span asp-validation-for="PatientModel.Side" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 mb-2">
            <h4>Comorbidity</h4>
        </div>
        <div class="col-md-4 col-12 col-sm-4 mb-2">
            <div class="form-group">
                <input class="form-control" asp-for="PatientModel.CoMorbity" placeholder="Enter message">
                <span asp-validation-for="PatientModel.CoMorbity" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group col-md-4">
        <div class="alert alert-primary" role="alert" id="DiagnosisMessage" style="display: none;"></div>
        <div class="alert alert-warning" role="alert" id="DiagnosisErrorMessage" style="display: none;"></div>
        <button type="button" id="DiagnosisBtn" onclick="getDiagnosisFromModel()" class="btn btn-primary">Update Diagnosis </button>
        <input type="hidden" name="DiagnosisModelsJson" id="DiagnosisModelsJson" />
    </div>
</form>
<script src="~/lib/select2/js/select2.min.js"></script>
<script src="~/customJs/Diagnosis.js"></script>