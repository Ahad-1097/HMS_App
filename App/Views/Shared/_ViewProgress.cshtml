@model App.Models.ViewModel.PatientViewModel


<!--**********************************
       Content body start
   ***********************************-->
<div class="col-xl-12 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Progress Details</h4>
        </div>
        <div class="card-body">
            <div class="class=" basic-form"">
                
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.DisplayNameFor(model => model.Progress.Date)</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Progress.Date)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label"> Complaint </label>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Progress.Cc)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">@Html.DisplayNameFor(model => model.Progress.GeneralCondition)</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Progress.GeneralCondition)
                    </div>
                </div>
              
                <a target="_blank" href="@Url.Action("Progress", "Patient",  new { PatientID = @Model.Progress.PatientID,ViewName="Print" })" class="btn btn-primary">Print Data</a>
            </div>

        </div>
    </div>
</div>


<!--**********************************
    Content body end
***********************************-->
